<form action="formulacreator.php?id={{courseid}}&gradeitemid={{gradeitemid}}" method="POST">
<div class="container">
    <div class="row">
        <div class="col mt-1">
            <div class="card h-100 formulacreator-select-items">
                <div class="card-body">
                    <h5 class="card-title">{{#str}} selectitems, gradereport_gradeconfigwizard {{/str}}</h5>
                    {{> gradereport_gradeconfigwizard/availablegradeitems }}
                </div> <!-- card-body -->
            </div> <!-- card -->



        </div> <!-- col -->
        <div class="col mt-1">
            <div class="card h-100 formulacreator-aggregation-method disabled-box">
                <div class="card-body">
                    <h5 class="card-title">{{#str}} aggregation, gradereport_gradeconfigwizard {{/str}}</h5>

                    <select name="formulaaggregationmethod" class="custom-select">
                        <option value="0" selected>{{#str}} selectaggremethod, gradereport_gradeconfigwizard {{/str}}</option>
                        <option value="meangrades">{{#str}} meangrades, gradereport_gradeconfigwizard {{/str}}</option>
                        <option value="weightedmeangrades">{{#str}} weightmeangrades, gradereport_gradeconfigwizard {{/str}}</option>
                        <option value="sum">{{#str}} sumgrades, gradereport_gradeconfigwizard {{/str}}</option>
                        <option value="highest">{{#str}} highestgrade, gradereport_gradeconfigwizard {{/str}}</option>
                        <option value="lowest">{{#str}} lowestgrade, gradereport_gradeconfigwizard {{/str}}</option>
                    </select> <!-- custom-select -->

                </div> <!-- card-body -->
            </div> <!-- card -->
        </div> <!-- col -->
        <div class="col mt-1">
            <div class="card h-100 formulacreator-weights-definition disabled-box">
                <div class="card-body">
                    <h5 class="card-title">{{#str}} defcalculation, gradereport_gradeconfigwizard {{/str}}</h5>

                    <table class="table">
                        <thead>
                        <tr>
                            <th scope="col">{{#str}} colitem, gradereport_gradeconfigwizard {{/str}}</th>
                            <th scope="col">{{#str}} colweight, gradereport_gradeconfigwizard {{/str}}</th>
                        </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table> <!-- table -->

                    <div class="d-flex justify-content-center">
                        <button type="button" class="btn btn-secondary" id="formulacreator-preview-formula">{{#str}} generateformula, gradereport_gradeconfigwizard {{/str}}</button>
                    </div>

                </div> <!-- card-body -->
            </div> <!-- card -->
        </div> <!-- col -->
    </div> <!-- row -->
    <div class="row">
        <div class="col mt-1">
            <div class="card h-100 formulacreator-formula disabled-box">
                <div class="card-body">
                    <h5 class="card-title">{{#str}} formula, gradereport_gradeconfigwizard {{/str}}</h5>
                    <div class="form-group">
                        <textarea name="formula" class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="" readonly></textarea>
                    </div>
                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-primary" id="formulacreator-save-formula" >{{#str}} saveformula, gradereport_gradeconfigwizard {{/str}}</button>
                    </div>
                </div> <!-- card-body -->
            </div> <!-- card -->
        </div> <!-- col -->
    </div>
    <div class="row">
        <div class="col mt-1">
            <div class="d-flex justify-content-end">
                    <a class="btn btn-secondary mt-3" href="{{{urlcancelformulacreator}}}" role="button">
                        {{#str}} cancelbutton3, gradereport_gradeconfigwizard {{/str}}</a>
            </div>
        </div> <!-- col -->
    </div> <!-- row -->
</div> <!-- container -->
</form>

{{#js}}

    //gradeitemid = "{{gradeitemid}}";
    require(['gradereport_gradeconfigwizard/formulacreator'], function(Formulacreator) {
    Formulacreator.init();
    });

{{/js}}
