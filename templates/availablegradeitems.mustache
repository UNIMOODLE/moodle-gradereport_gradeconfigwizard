{{#availablegradeitems}}
  {{^iscourse}}
      {{^iscategory}}
          {{#ismod}}
              <div class="form-check">
                  {{#categorydepthloop}}
                      <span class="p-2"></span>
                  {{/categorydepthloop}}
                  <input class="form-check-input" type="checkbox" data-id="{{id}}" data-displayname="{{itemname}}" value="" id="availablegradeitem-{{id}}">
                  <label class="form-check-label" for="availablegradeitem-{{id}}">
                      {{itemname}}
                  </label>
              </div>
          {{/ismod}}
          {{#ismanual}}
              <div class="form-check">
                  {{#categorydepthloop}}
                      <span class="p-2"></span>
                  {{/categorydepthloop}}
                  <input class="form-check-input" type="checkbox" data-id="{{id}}" data-displayname="{{itemname}}" value="" id="availablegradeitem-{{id}}">
                  <label class="form-check-label" for="availablegradeitem-{{id}}">
                      {{itemname}}
                  </label>
              </div>
          {{/ismanual}}
          {{^hidecategorytotals}}
              {{#istotal}}
                  <div class="form-check">
                      {{#categorydepthloop}}
                          <span class="p-2"></span>
                      {{/categorydepthloop}}
                      <input class="form-check-input" type="checkbox" data-id="{{id}}" data-displayname="Total {{categoryname}}" value="" id="availablegradeitem-{{id}}">
                      <label class="form-check-label font-weight-bold" for="availablegradeitem-{{id}}">
                          {{#str}} cattotal, gradereport_gradeconfigwizard {{/str}} {{categoryname}}
                      </label>
                  </div>
              {{/istotal}}
          {{/hidecategorytotals}}
      {{/iscategory}}
      {{^hidecategory}}
          {{#iscategory}}
              <div class="form-check">
                  {{#categorydepthloop}}
                      <span class="p-2"></span>
                  {{/categorydepthloop}}
                  <!--<input class="form-check-input" type="checkbox" data-id="{{id}}" data-displayname="Total {{categoryname}}" value="" id="availablegradeitem-{{id}}">-->
                  <!--<i class="fa fa-folder fa-fw icon itemicon" title="Category" role="img" aria-label="Category"></i>-->
                  <label class="form-check-label font-weight-bold" for="availablegradeitem-{{id}}">
                      {{categoryname}}
                  </label>
              </div>
          {{/iscategory}}
      {{/hidecategory}}
  {{/iscourse}}
{{/availablegradeitems}}
