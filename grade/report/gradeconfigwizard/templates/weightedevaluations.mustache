<div class="container">
    <div class="weightedevaluations-category-creation container">
        <div class="row">{{#str}} wcatcreation, gradereport_gradeconfigwizard {{/str}}</div>
        <div class="row mb-4">
            <input type="text" id="weightedevaluations-category-create-name" class="mr-3" size="40">
            <button type="button" id="weightedevaluations-category-create-btn" class="btn btn-primary">{{#str}} wcreatebutton, gradereport_gradeconfigwizard {{/str}}</button>
        </div>
    </div>

    <form action="{{{urlsaveexit}}}" id="evaluationsform" method="post">
        <table id="weightedevaluations-table" class="weightedevaluations-table table table-bordered">
            <thead>
            <tr>
                <th>{{#str}} wmultitableitineraries, gradereport_gradeconfigwizard {{/str}}</th>
                <th>{{#str}} wmultitablecategories, gradereport_gradeconfigwizard {{/str}}</th>
                <th>{{#str}} wmultitableweight1, gradereport_gradeconfigwizard {{/str}}</th>
                <th>{{#str}} wmultitableelements, gradereport_gradeconfigwizard {{/str}}</th>
                <th>{{#str}} wmultitableweight2, gradereport_gradeconfigwizard {{/str}}</th>
            </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </form>
    <div class="text-center">
        <input type="submit" form="evaluationsform" class="saveandexit disabled-box btn btn-primary" value="{{#str}} savebutton2, gradereport_gradeconfigwizard {{/str}}">
        <a class="btn btn-secondary ml-5" href="{{{urlcancelweighteval}}}" role="button">
            {{#str}} cancelbutton4, gradereport_gradeconfigwizard {{/str}}</a>
    </div>
</div>

{{!-- START: Modal --}}

<div class="modal fade"
     id="available-gradeitems-modal-id"
     tabindex="-1"
     role="dialog"
     aria-labelledby="available-gradeitems-modal-label"
     data-gradeitemaddtarget=""
     data-gradeitemidrow=""
     data-gradeitemid=""
     data-callerrandomid=""
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="available-gradeitems-modal-label">{{#str}} chooseelements2, gradereport_gradeconfigwizard {{/str}}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {{> gradereport_gradeconfigwizard/availablegradeitems }}
            </div>
            <div class="modal-footer">
                <button type="button" class="confirm btn btn-primary mr-3">{{#str}} addbutton2, gradereport_gradeconfigwizard {{/str}}</button>
                <button type="button" data-dismiss="modal" class="cancel btn btn-secondary">{{#str}} cancelbutton2, gradereport_gradeconfigwizard {{/str}}</button>
            </div>
        </div>
    </div>
</div>

{{!-- END: Modal --}}

{{#js}}
    require(['gradereport_gradeconfigwizard/weightedevaluations'], function(Weightedevaluations) {
    Weightedevaluations.init();
    });
{{/js}}
